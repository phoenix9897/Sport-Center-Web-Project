@model Contact
@{
    ViewData["Title"] = "Contact Page";
}


<div style="height: 700px; background-image: url(/images/background.jpg);">
    <div style="display: flex; justify-content: center; align-items: center; height: 650px;">
        <div class="card border-info text-center" style="width: 400px; background-color: #526D82;">
            <div class="mb-3 mx-3 my-3">
                <h1 style="color: #62c8d2; text-align: center;">CONTACT US</h1>
                <form asp-controller="Contact" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                   
                    <div class="mb-3">
                        <label asp-for="EmailAddress" class="form-label text-white">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-white">Title</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Content" class="form-label text-white">Content</label><br>
                        <textarea asp-for="Content" cols="43" rows="8"></textarea>
                        <span asp-validation-for="Content"></span>
                    </div>
                    <button type="submit" class="btn btn-info">SEND</button>
                </form>
            </div>
        </div>
    </div>
</div>