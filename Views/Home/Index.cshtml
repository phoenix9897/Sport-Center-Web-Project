@{
    ViewData["Title"] = "Home Page";
}

<section id="homeCarousel">
    <div id="carouselExample" class="carousel slide">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/images/2.png" class="d-block w-100" alt="...">
        </div>
        
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    
</section>

<h1 id="index-h1">Select The Best Sport For You</h1>

<section id="cardPart">
  
  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-lg-4">
        <div class="card border-info" style="width: 18rem; height: 400px;">
          <img src="/images/fitness.jpeg" class="card-img-top" style="height: 200px;">
          <div class="card-body">
            <h5 class="card-title">Fitness</h5>
            <p class="card-text">If your goal want to seem fit and more powerful, you can click "more information" button.</p>
            <a asp-controller="Home" asp-action="Fitness" class="btn btn-primary">More Information</a>
          </div>
        </div>
      </div>

      <div class="col-sm-12 col-lg-4">
        <div class="card border-info" style="width: 18rem; height: 400px;">
          <img src="/images/kickBox.jpg" class="card-img-top" style="height: 200px;">
          <div class="card-body">
            <h5 class="card-title">Kick Box</h5>
            <p class="card-text">There are group lessons and personal lessons for kick box.
               You can click the "More Information" button and see opportunities for you. </p>
            <a asp-controller="Home" asp-action="Kickbox" class="btn btn-primary">More Information</a>
          </div>
        </div>
      </div>

      <div class="col-sm-12 col-lg-4">
        <div class="card border-info" style="width: 18rem; height: 400px;">
          <img src="/images/pilates.jpg" class="card-img-top" style="height: 200px;">
          <div class="card-body">
            <h5 class="card-title">Pilates</h5>
            <p class="card-text">If you want to more flexible body, pilates is the best choice for you.</p>
            <a asp-controller="Home" asp-action="Pilates" class="btn btn-primary">More Information</a>
          </div>
        </div>
      </div>

    </div>

    <div class="row">

      <div class="col-sm-12 col-lg-6">
        <div class="card border-info" style="width: 18rem; height: 400px;">
          <img src="/images/zumba.jpg" class="card-img-top" style="height: 200px;">
          <div class="card-body">
            <h5 class="card-title">Zumba</h5>
            <p class="card-text">If you want to have fun and do sports at the same time, zumba is the best choice for you.</p>
            <a asp-controller="Home" asp-action="Zumba" class="btn btn-primary">More Information</a>
          </div>
        </div>
      </div>

      <div class="col-sm-12 col-lg-6">
        <div class="card border-info" style="width: 18rem; height: 400px;">
          <img src="/images/Coaching.png" class="card-img-top" style="height: 200px;">
          <div class="card-body">
            <h5 class="card-title">Coaching</h5>
            <p class="card-text">If you do not have much time, you can work with a personal trainer.</p>
            <a asp-controller="Home" asp-action="Coaching" class="btn btn-primary">More Information</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

